<h1> My tasks</h1>
<% @tasks.each do |task|%>
<!--   <li><%= link_to task.title, task_path(task) %></li> -->
 <% if task.completed == true  %>
    <li> ✅ <%= link_to task.title, task_path(task) %>
    <span><%= link_to "🗑", task_path(task), method: :delete, data: { confirm: "Do you completely finish this task?" } %></span>
  </li>
  <% else  %>
    <li> ✖️ <%=  link_to task.title, task_path(task) %> 🗑
    <p><%= link_to task_path(task), method: :delete, data: { confirm: "Do you completely finish this task?" } do %>
      🗑
      <% end %>
    </p>

    </li>
  <% end  %>
<!-- <li> <%= task.details %></li> -->
 <!--  <li><% link_to task.title, task_path(task) %></li> -->
<% end %>

  <p><%= link_to "Create a new task", tasks_new_path %></p>

